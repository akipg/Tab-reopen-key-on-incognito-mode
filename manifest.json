{
  "name": "Tab reopen key on incognito mode",
  "short_name": "Tab reopen incognito",
  "description": "This extension enables {Ctrl+Shift+X} shortcut key to reopen tabs/windows on Incognito mode.",
  "version": "2.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "dist/src/service_worker.js",
    "type": "module"
  },
  "permissions": ["sessions", "tabs"],
  "optional_permissions": [],
  "commands": {
    "reopen_tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "windows": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Reopen tab"
    }
  }
}
